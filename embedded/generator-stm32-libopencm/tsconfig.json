{
  "exclude": [
    "**/*.spec.*",
    "**/__*/**",
    "**/node_modules",
    "**/.*/",
    "./generators/*",
    "./eslint.config.js"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "module": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./generators",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
